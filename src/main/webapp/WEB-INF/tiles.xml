    <definition name="selection" extends="defaultTemplate">
		<put-attribute name="body" value="/WEB-INF/views/wizzard/selection.jsp" />
    </definition>

    <definition name="finish" extends="defaultTemplate">
		<put-attribute name="body" value="/WEB-INF/views/wizzard/finish.jsp" />
    </definition>

    <definition name="about" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/about.jsp" />
